% Delimit the arguments to \cs{NC@strip} with `\texttt{:}', `\texttt{->}',
% a space, and \cs{@@} to pull out the required parts of the output from
% \cs{meaning}.
%    \begin{macrocode}
\def\NC@strip#1:#2->#3 #4\@@{#2 -> #4}
%    \end{macrocode}
% \end{macro}
