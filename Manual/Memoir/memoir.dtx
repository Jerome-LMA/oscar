%  trailing spaces, then call the closing routine with \cs{@tempa} set
%  equal to the next token in the document.
%    \begin{macrocode}
% \def\@BTnormal{\hrule
%   \@height \@thisrulewidth\futurenonspacelet\@tempa\@BTendrule}
\def\@BTnormal{%
%%  \bktabrule{\@thisrulewidth}
