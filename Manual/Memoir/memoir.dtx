  \count@#1\relax
%    \end{macrocode}
% Put \verb?#1? copies of \verb?#2? in the token register.
%    \begin{macrocode}
  \loop
  \ifnum\count@>\z@
    \advance\count@\m@ne
    \@temptokena\expandafter{\the\@temptokena#2}%
  \repeat
%    \end{macrocode}
% \cs{NC@do} will ensure that \cs{NC@find} is \cs{let} equal
% to \cs{NC@find@*}.
%    \begin{macrocode}
  \NC@find}

