%    \begin{macrocode}
\newcommand{\sidecontents}{{%
  \if@twocolumn%    %% put outside nearest column
    \if@firstcolumn%  %% move to left
      \setlength{\@tempdimc}{\sidebarwidth}%
      \advance\@tempdimc\sidebarhsep
      \moveleft\@tempdimc
    \else%            %% move to right
      \setlength{\@tempdimc}{\columnwidth}%
      \advance\@tempdimc\sidebarhsep
      \moveright\@tempdimc
    \fi
