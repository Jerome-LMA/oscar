\renewcommand{\thesubsubsection}{%
              \thesubsection.\@arabic\c@subsubsection}
\renewcommand{\theparagraph}{%
              \thesubsubsection.\@arabic\c@paragraph}
\renewcommand{\thesubparagraph}{%
              \theparagraph.\@arabic\c@subparagraph}
